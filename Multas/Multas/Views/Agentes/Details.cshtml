@model Multas.Models.Agentes

@{
    ViewBag.Title = "Detalhes";
}

<h2>Detalhes do Agente<i>@Model.Nome</i></h2>

<div>

    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Esquadra)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Esquadra)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Fotografia)
        </dt>

        <dd>
            @*@Html.DisplayFor(model => model.Fotografia)*@
            <img src="~/Imagens/@Model.Fotografia "height="150" />
        </dd>

    </dl>

    @*mostrar os dados das multas emitidas pelo agente*@
    <hr />
        <h4>Lista das Multas</h4>
        <table class="table">
            <tr>
                <th>@Html.DisplayNameFor(model => model.ListaDeMultas.FirstOrDefault().ID)</th>
                <th>@Html.DisplayNameFor(model => model.ListaDeMultas.FirstOrDefault().DataDaMulta)</th>
                <th>@Html.DisplayNameFor(model => model.ListaDeMultas.FirstOrDefault().ValorMulta)</th>
                <th>Condutor</th>
                <th>Viatura</th>

            </tr>

            @*Listar as multas*@
            @foreach (var multa in Model.ListaDeMultas)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => multa.ID)
                </td>
                <td>
                    @multa.DataDaMulta
                </td>
                <td>
                    @multa.ValorMulta
                </td>
                <td>
                    @* Link para um Condutor *@
                    @*<a href="/condutores/details/@multa.Condutor.ID">@multa.Condutor.Nome</a>*@
                </td>
                <td>
                    @* Link para uma Viatura *@
                    @*<a href="/viaturas/details/@multa.Viatura.ID">@multa.Viatura.Matricula</a>*@
                    @*@Html.ActionLink(multa.Viatura.Matricula, "Details","Viaturas", new { id = multa.Viatura.ID },null) |*@

                </td>


            </tr>
            }
            </table>

    <hr />


</div>
<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Voltar a lista", "Index")
</p>
